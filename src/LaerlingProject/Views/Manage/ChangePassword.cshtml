@model ChangePasswordViewModel
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Skift kodeord";
}
<div class="container">
    <div class="col-md-3" style="margin-top: 20px">
        <div class="panel panel-default">
            <div class="panel-body profile-usermenu" style="margin-top:0">
                <div class="col-md-12 no-padding-left-right">
                    <ul class="nav">
                        <li>
                            <a asp-action="Index">
                                <i class="glyphicon glyphicon-user"></i>
                                <span>&nbsp; Profil</span>
                            </a>
                        </li>
                        <li>
                            <a asp-action="EditUser">
                                <i class="glyphicon glyphicon-cog"></i>
                                <span>&nbsp; Rediger</span>
                            </a>
                        </li>
                        <li class="active">
                            <a asp-action="ChangePassword">
                                <i class="glyphicon glyphicon-lock"></i>
                                <span>&nbsp; Skift kodeord</span>
                            </a>
                        </li>
                        @if (UserManager.GetUserAsync(User).Result.LaerlingProfilID == null)
                        {
                            <li>
                                <a asp-action="RegisterLaerling">
                                    <i class="glyphicon glyphicon-wrench"></i>
                                    <span>&nbsp; Arbejder</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a asp-action="EditLaerling">
                                    <i class="glyphicon glyphicon-wrench"></i>
                                    <span>&nbsp; Arbejder</span>
                                </a>
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-9" style="margin-top: 20px">
        <div class="panel panel-default">
            <div class="h3" style="margin-bottom:20px; margin-left: 20px">
                <span class="glyphicon glyphicon-lock"></span>&nbsp;
                @ViewData["Title"]
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-md-12" style="padding:20px">
                    <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group-lg">
                            <div class="col-md-12">
                                <label asp-for="OldPassword" class="h4"></label>
                                <input asp-for="OldPassword" class="form-control no-rounded-corners" style="max-width:100%" />
                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group-lg">
                            <div class="col-md-12">
                                <label asp-for="NewPassword" class="h4" style="margin-top:20px"></label>
                                <input asp-for="NewPassword" class="form-control no-rounded-corners" style="max-width:100%" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group-lg">
                            <div class="col-md-12">
                                <label asp-for="ConfirmPassword" class="h4" style="margin-top:20px"></label>
                                <input asp-for="ConfirmPassword" class="form-control no-rounded-corners" style="max-width:100%" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group-lg">
                            <div class="col-md-12">
                                <hr />
                                <button type="submit" class="btn btn-lg btn-success no-rounded-corners" style="width:100%">Skift kodeord</button>
                            </div>
                        </div>
                    </form>
                </div>


            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
